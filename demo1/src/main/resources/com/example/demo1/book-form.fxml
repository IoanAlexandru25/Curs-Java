<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER_LEFT" prefHeight="350.0" prefWidth="350.0" spacing="10" style="-fx-background-color: #B2BABB;" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.BookFormController">
    <Label text="Title:">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
    <TextField fx:id="titleField" prefHeight="26.0" prefWidth="227.0" style="-fx-border-color: #1BC500; -fx-border-width: 0px 0px 2px 0px;" />
    <Label text="Author:">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
    <TextField fx:id="authorField" style="-fx-border-color: #1BC500; -fx-border-width: 0px 0px 2px 0px;" />
    <Label text="Genre:">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
    <TextField fx:id="genreField" style="-fx-border-color: #1BC500; -fx-border-width: 0px 0px 2px 0px;" />
    <Label text="Publication Year:">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
    <TextField fx:id="yearField" style="-fx-border-color: #1BC500; -fx-border-width: 0px 0px 2px 0px;" />
    <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
        <children>
            <Button fx:id="actionButton" maxWidth="60.0" onAction="#handleBookAction" prefHeight="35.0" style="-fx-background-color: #1BC500;" text="Save" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
            </Button>
        </children>
    </VBox>
</VBox>

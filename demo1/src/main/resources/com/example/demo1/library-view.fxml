<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #b2babb;" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.LibraryController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <left>
        <ListView fx:id="booksListView" prefHeight="500.0" prefWidth="500.0" BorderPane.alignment="CENTER" />
    </left>
    <right>
        <VBox alignment="CENTER" prefHeight="480.0" prefWidth="170.0" spacing="10" BorderPane.alignment="CENTER">
            <Button fx:id="addButton" onAction="#handleAddBookAction" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #1bc500;" text="Add Book" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
            </Button>
            <Button fx:id="editButton" onAction="#handleEditBookAction" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #1bc500;" text="Edit Book" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
            </Button>
            <Button fx:id="deleteButton" onAction="#handleDeleteBookAction" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #1bc500;" text="Delete Book" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
            </Button>
            <Button fx:id="getAllButton" onAction="#handleGetAllBooksAction" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #1bc500;" text="Get All Books" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
            </Button>
        </VBox>
    </right>
</BorderPane>
